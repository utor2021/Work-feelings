<div class="jumbotron bg-light">
    <h1 class="display-4 text-center">Here's how you have been feeling!</h1>
    <div class="container mt-4">
        <br>
        <div class="container mb-4 ">
            <div class="row">
                {{#each emojiData}}
                <div class="col-sm text-center">
                    <img class="rounded mx-auto d-block" src="/images/emojis/{{emoji}}Capture.PNG">
                    <h2 class="mt-4 fw-bold text-danger"> {{emojiCount}}</h2>
                </div>
                {{/each}}
            </div>
        </div>

        <div class="container">
            <div class="row">
                {{#each status}}
                <div class="col-sm-12 col-lg-6 border border-dark">
                    <textarea cols="55" rows="5" class="status-text" id="diary{{id}}">{{diary}}</textarea>
                    <div>
                        <img class="emoji edit-emoji-selection" src="/images/emojis/{{emoji}}Capture.PNG">
                        <h6 class="created_at">{{format_date created_at}}</h6>
                    </div>
                    <div class="emoji-options" hidden>{{> emoji}}</div>
                    <div id="dlt-save-icons">
                        <div class="edit-post-form"><i class="fa fa-save" id="{{id}}"></i></div>
                        <div class="delete-post-btn"><i class="fas fa-trash-alt" id="{{id}}"></i></div>
                    </div>

                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<script src="/javascript/delete-status.js"></script>
<script src="/javascript/edit-status.js"></script>
